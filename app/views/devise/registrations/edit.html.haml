%h2.text-center= "Edit #{resource_name.to_s.humanize}"
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'form-signin', :method => :put }) do |f|
  = f.error_notification
  = f.input :email, :required => true, :autofocus => true, label: false, placeholder: 'Email', input_html: { class: 'form-control' }
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %p= "Currently waiting confirmation for: = #{resource.unconfirmed_email} "
  = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, label: false, placeholder: 'Password', input_html: { class: 'form-control' }
  = f.input :password_confirmation, :required => false, label: false, placeholder: 'Password Confirmation', input_html: { class: 'form-control' }
  = f.input :current_password, :hint => 'we need your current password to confirm your changes', :required => true, label: false, placeholder: 'Current Password', input_html: { class: 'form-control' }
  = f.button :submit, "Update", class: 'btn btn-primary btn-block'
%h3.text-center Cancel my account
%p.text-center
  Unhappy?
  = link_to 'Cancel my account', registration_path(resource_name), :data => { :confirm => 'Are you sure?' }, :method => :delete
.text-center
  = link_to 'Back', :back